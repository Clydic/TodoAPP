{# templates/emails/alert.html.twig #}
<!DOCTYPE html>
<html>

	<head>
		<meta charset="utf-8">
	</head>
	<body style="text-align : center;">
		<h1>ATTENTION!!
			{{username}}</h1>
		<h1>Votre tâche
			{{task.name}}
			arrive à échéance le
			{{task.dueAt|date("d/m/y")}}</h1>
		<div class="container">
			<table class="table table-striped tabled-bordered" id="tasksTable">
				<caption>Le résumé de votre tâche</caption>
				<thead>
					<tr>
						<th>Nom</th>
						<th>Description</th>
						<th>Date effective</th>
						<th>Catégorie</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>{{task.name}}</td>
						<td>{{task.description}}</td>
						<td>{{task.dueAt|date("d/m/y")}}</td>
						<td>{{task.tag.name}}</td>
					</tr>
				</tbody>
			</table>
		</div>
		<p>Votre AppToDo adorée</p>
	</body>
</html>
