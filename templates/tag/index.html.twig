{% extends 'base.html.twig' %}

{% block title %}
	{{'tags.lTabTitle'|trans}}
{% endblock %}

{% block body %}
	<h1>{{'tags.ltTitle'|trans}}</h1>

	{% for label, messages in app.flashes %}
		{% for message in messages %}
			<div class="alert alert-{{ label }}">
				{{message|trans}}
			</div>
		{% endfor %}

	{% endfor %}
	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<th>Id</th>
				<th>{{ 'general.name'|trans}}
				</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for tag in tags %}
				<tr>
					<td>{{ tag.id }}</td>
					<td>{{ tag.name }}</td>
					<td>
						<a href="{{path('tag_update',{'id': tag.id})}}" class="btn btn-warning mx-auto">{{'general.button.update'|trans}}</a>
						<a href="{{path('tag_show',{'id': tag.id})}}" class="btn btn-danger mx-auto">{{'general.button.delete'|trans}}</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">{{'tags.no_found'|trans}}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{path('tag_create')}}" class="btn btn-primary mx-auto">{{'general.button.add'|trans}}</a>
</br>
<a href="{{path('task_listing')}}" class="btn btn-secondare mx-auto">{{'general.button.back_to_list'|trans}}</a>{% endblock %}
