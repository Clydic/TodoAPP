{% extends 'base.html.twig' %}

{% block title %}Tag index
{% endblock %}

{% block body %}
	<h1>Tag index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>{{ 'general.name'|trans}}
				</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for tag in tags %}
				<tr>
					<td>{{ tag.id }}</td>
					<td>{{ tag.name }}</td>
					<td>
						<a href="{{path('tag_show',{'id': tag.id})}}" class="btn btn-info mx-auto">{{'general.button.show'|trans}}</a>
						<a href="{{path('tag_update',{'id': tag.id})}}" class="btn btn-dark mx-auto">{{'general.button.update'|trans}}</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{path('tag_create')}}" class="btn btn-primary mx-auto">{{'general.button.add'|trans}}</a>
{% endblock %}
