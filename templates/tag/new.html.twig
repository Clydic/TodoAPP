{% extends 'base.html.twig' %}

{% block title %}
	{{'tag.cTabTitle'|trans}}
{% endblock %}

{% block body %}
	<h1>{{'tags.ctTitle'|trans}}</h1>

	{% for label, messages in app.flashes %}
		{% for message in messages %}
			<div class="alert alert-{{ label }}">
				{{message|trans}}
			</div>
		{% endfor %}
	{% endfor %}

	{{ include('tag/_form.html.twig') }}

	<a href="{{ path('tag_listing') }}">{{'general.button.back_to_list'|trans}}</a>
{% endblock %}
